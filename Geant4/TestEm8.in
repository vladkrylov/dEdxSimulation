#
# Macro file for the initialization phase of "TestEm8.cc"
#
# It creates the default geometry (simple absorber cylinder )        
#
/control/verbose 2
/run/verbose 2
#/tracking/verbose 2
#
#  select EM PhysicsList
#
/testem/phys/addPhysics emstandard_opt3
/process/em/AddPAIRegion all GasDetector pai

/cuts/setLowEdge 100.00 eV
/cuts/setHighEdge 100.00 GeV

#/testem/phys/addPhysics  pai_photon
#
#/testem/stepMax         10 mm
#
/testem/histo/setRootTreeName Lcut=100eV

#
/run/initialize
#
/run/setCut  0.0001 mm
/run/setCutForRegion GasDetector 0.0001 mm
/run/particle/dumpCutValues
#
/gun/particle e-
#
#/gun/particle proton
#
#/gun/particle mu-
# 
/gun/energy 3.00 MeV

/run/beamOn 1500

